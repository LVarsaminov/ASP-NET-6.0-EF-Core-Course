@inherits LayoutComponentBase

<div class="layout">
    <div class="header">
        <div>
            <a>@today.ToString("dddd, dd MMMM yyyy")</a>
        </div>
    </div>
    <div class="sidebar">
        <NavMenu />
    </div>
    <div class="content">
        <p> @Body </p>
    </div>
    <div class="footer"> 
        <footer>
            @FooterMessage
        </footer>
    </div>
</div>

@code {
    public string FooterMessage { get; set; } = "Great Shopping";
    DateTime today = DateTime.Today;
}
